@model IEnumerable<PresentationLayer.Models.Book>

<h2>Available Books</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Genre</th>
            <th>Availability</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Genre</td>
                <td>@(book.IsAvailable ? "Available" : "Checked Out")</td>
            </tr>
        }
    </tbody>
</table>
